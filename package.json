{
  "name": "sip-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Student Internship Portal - Production Monorepo",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "web": "turbo run dev --filter=web-app",
    "api": "turbo run dev --filter=api-service",
    "ai": "turbo run dev --filter=ai-engine",
    "db:migrate": "cd apps/api-service && npm run prisma:migrate",
    "db:seed": "cd apps/api-service && npm run prisma:seed",
    "db:studio": "cd apps/api-service && npm run prisma:studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.1.5",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}